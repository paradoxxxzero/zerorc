#!/bin/sh
# This file must be run in your home
rm -f .emacs
rm -f .emacs.d
rm -f .zshrc
rm -f .zsh.d
rm -f .Xresources
rm -f .pythonrc.py
rm -f .inputrc
rm -f .gitconfig
rm -f .gitignore
ln -s .zerorc/emacsrc/.emacs .
ln -s .zerorc/emacsrc/.emacs.d .
ln -s .zerorc/zshrc/.zshrc .
ln -s .zerorc/zshrc/.zsh.d .
ln -s .zerorc/.Xresources .
ln -s .zerorc/.pythonrc.py .
ln -s .zerorc/.inputrc .
ln -s .zerorc/.gitconfig .
ln -s .zerorc/.gitignore-global .gitignore
